{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "ChangeBG-vite",

  "description": "Change page background color easily",
  
  "action": {
      "default_popup": "index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}